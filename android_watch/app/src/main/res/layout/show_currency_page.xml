<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@color/black"
    >

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/img_logo" />

    <LinearLayout
        android:id="@+id/ll"
        android:gravity="fill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/img_logo"
        android:layout_marginTop="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true">
        <TextView
            android:id="@+id/txt_currency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txt_tr_currency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12.5sp"
            android:textColor="#fa124e"
            android:letterSpacing="0.05"

            />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_buying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:textSize="12.5sp"
        android:layout_marginTop="10dp"
        android:textColor="#fa124e"
        android:letterSpacing="0.03"
        android:layout_centerInParent="true"
        android:text="@string/str_alis"
        tools:ignore="NotSibling,UnknownId" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txt_buying"
    android:id="@+id/ll3"
    android:layout_marginTop="1dp"
    >
    <TextView
        android:id="@+id/txt_buying_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:layout_marginStart="30.5dp"
        android:textColor="#ffffff"
        android:letterSpacing="0.03"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tl"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="6dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="131.5dp"
        android:id="@+id/ll4"
        android:layout_marginLeft="12.5dp"
        android:layout_height="0.5dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/ll3"
        android:layout_marginTop="3dp"
        android:background="#fa124e"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/txt_selling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll4"
        android:textSize="12.5sp"
        android:textColor="#fa124e"
        android:letterSpacing="0.03"
        android:layout_marginTop="3dp"
        android:layout_centerInParent="true"
        android:text="@string/satis"
        tools:ignore="NotSibling" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll2"
        android:layout_below="@+id/txt_selling"
        android:layout_marginTop="1dp"
        android:layout_marginStart="30.5dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/txt_selling_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.03"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_gravity="center_vertical"
            android:text="@string/tl"
            />
    </LinearLayout>
</RelativeLayout>

