<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginStart="13dp"
        android:contentDescription="@string/currency_icon"/>

    <TextView
        android:id="@+id/txt_currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21.5dp"
        android:layout_marginStart="13dp"
        android:textSize="18.8sp"
        android:textColor="#ffffff"
        android:letterSpacing="0.03"
        android:layout_toEndOf="@+id/img_logo"
        android:contentDescription="@string/currency_type"/>

    <TextView
        android:id="@+id/txt_tr_currency_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_currency_name"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/img_logo"
        android:layout_marginStart="11dp"
        android:textSize="12.5sp"
        android:textColor="#fa124e"
        android:letterSpacing="0.05"/>

    <TextView
        android:id="@+id/txt_buying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_tr_currency_name"
        android:layout_marginTop="19.5dp"
        android:textSize="12.5sp"
        android:textColor="#fa124e"
        android:letterSpacing="0.03"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/txt_buying_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="31sp"
        android:textColor="#ffffff"
        android:letterSpacing="0.03"
        android:layout_below="@+id/txt_buying"
        android:layout_marginTop="5.5dp"
        android:layout_marginStart="32.5dp"
        />

</RelativeLayout>