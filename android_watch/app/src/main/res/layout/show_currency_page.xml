<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill"
    android:background="@color/black"
    >

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true"
        android:contentDescription="img logo" />

    <LinearLayout
        android:id="@+id/ll"
        android:gravity="fill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/img_logo"
        android:layout_marginTop="14dp"
        android:layout_marginStart="13dp">
        <TextView
            android:id="@+id/txt_currency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txt_tr_currency_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12.5sp"
            android:textColor="#fa124e"
            android:letterSpacing="0.05"

            />
    </LinearLayout>
    <TextView
        android:id="@+id/txt_buying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:textSize="12.5sp"
        android:layout_marginTop="19.5dp"
        android:textColor="#fa124e"
        android:letterSpacing="0.03"
        android:layout_centerInParent="true"
        android:text="@string/str_alis"
        tools:ignore="NotSibling,UnknownId" />

    <TextView
        android:id="@+id/txt_buying_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="31sp"
        android:layout_marginStart="30.5dp"
        android:textColor="#ffffff"
        android:letterSpacing="0.03"
        android:layout_below="@+id/txt_buying"
        android:layout_marginTop="3dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tl"
        android:layout_below="@id/txt_buying"
        android:layout_toEndOf="@+id/txt_buying_cost"
        android:layout_marginTop="15dp"
        android:layout_marginStart="6dp"
        />


    <TextView
        android:id="@+id/txt_selling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_buying_cost"
        android:textSize="12.5sp"
        android:textColor="#fa124e"
        android:letterSpacing="0.03"
        android:layout_centerInParent="true"
        android:text="@string/satis"
        tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/txt_selling_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="31sp"
            android:textColor="#ffffff"
            android:letterSpacing="0.03"
            android:layout_marginTop="3dp"
            android:layout_marginStart="30.5dp"
            android:layout_below="@+id/txt_selling"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/txt_selling_cost"
            android:layout_below="@+id/txt_selling"
            android:layout_marginTop="15dp"
            android:layout_marginStart="6dp"
            android:text="@string/tl"
            />

</RelativeLayout>

